#!/bin/bash

#-----------
# VARIABLES
#-----------

PHOENIX_PATH=${PHOENIX_PATH-"/src/samplephoenix"}

#-----------
# INSTALLER
#-----------

source $HOME/.bash_aliases

(cd $PHOENIX_PATH && \
 git pull && \
 source ./bin/env && \
 mix deps.get && \
 mix compile && \
 brunch build --production && \
 mix phoenix.digest && \
 nohup mix phoenix.server &)
